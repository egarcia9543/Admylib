<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('../partials/adminHead') %>
    <%- include ('../partials/adminDatatable') %>
</head>

<body>
    <header>
        <%- include ('../partials/adminNavbar') %>
    </header>
    <main>
        <div class="card mb-4">
            <div class="card-body d-flex justify-content-end">
                <a class="btn btn-outline-dark" href="registroproductos">Registrar sanción <i class="bi bi-book"></i></a>
            </div>
        </div>
        <div class="container">
            <div class="table-responsive">
                <table id="datatable" class="table table-striped">
                    <thead>
                        <tr>
                            <th>Nombre completo</th>
                            <th>Motivo</th>
                            <th>Penalización</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% penalties.forEach(penalty => { %>
                        <tr>
                            <td><%=  penalty.user.fullname %></td>
                            <td><%= penalty.reason %></td>
                            <td><%= penalty.penaltyTime %></td>
                            <td>
                                <button class="btn btn-outline-warning"><i class="bi bi-arrow-clockwise"></i></button>
                                <button class="btn btn-outline-success"><i class="bi bi-download"></i></button>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </main>
    <script src="/scripts/datatable.js" defer></script>
</body>
</html>