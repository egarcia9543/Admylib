<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs') %>
</head>

<body>
    <header>
        <%- include('../partials/navbar.ejs'); %>
    </header>
    <main>
        <section class="section section__one" id="section__one">
            <div class="search__container">
                <form action="" class="searchbar">
                    <label for="search__input">
                        <span class="fs-3">Búsqueda rápida en el Catálogo</span>
                    </label>
                    <div class="searchbar__container input-group container">
                        <button class="btn" type="button" disabled>
                            <i class="bi bi-search"></i>
                        </button>
                        <input type="text" id="search__input" class="form-control"
                            placeholder="Ingrese un título o palabra clave" id="search__input">
                    </div>
                </form>
            </div>
        </section>
        <section>
            <div class="container mt-3">
                <h3 class="text-center mb-3">Recomendados</h3>
                <div class="row row-cols-1 row-cols-md-3 g-5">
                    <% recommendations.forEach(recommendation=> { %>
                        <div class="col">
                            <a href="book/<%= recommendation._id %>" class="text-decoration-none text-dark">
                                <div class="card h-100">
                                    <img src="https://source.unsplash.com/800x600/?libro" class="card-img-top" />
                                    <div class="card-body">
                                        <h5 class="card-title text-center">
                                            <%= recommendation.title %>
                                        </h5>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <% }) %>
                </div>
        </section>
        <section class="schedule-container mt-3">
            <div class="container d-flex flex-column justify-content-center align-items-center">
                <h3 class="text-center text-light pt-3">Calendario de actividades</h3>
                <iframe class="embed-responsive-item mt-2"
                    src="https://calendar.google.com/calendar/embed?height=600&wkst=1&bgcolor=%23616161&ctz=America%2FBogota&showTitle=0&showDate=0&showPrint=0&showCalendars=0&showTz=0&showTabs=0&hl=es&src=ZWdhcmNpYTk1NDNAbWlzZW5hLmVkdS5jbw&src=ZXMuY28jaG9saWRheUBncm91cC52LmNhbGVuZGFyLmdvb2dsZS5jb20&color=%23039BE5&color=%230B8043"
                    width="500px" height="300px"></iframe>
            </div>
        </section>
    </main>
</body>

</html>