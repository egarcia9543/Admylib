<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('../partials/adminHead') %>
    <%- include ('../partials/adminDatatable') %>
</head>

<body>
    <header>
        <%- include ('../partials/adminNavbar') %>
    </header>
    <main>
        <div class="card mb-4">
            <div class="card-body d-flex justify-content-end">
                <a class="btn btn-outline-dark" href="registroproductos">Registrar préstamo <i
                        class="bi bi-upload"></i></a>
            </div>
        </div>
        <div class="container">
            <div class="table-responsive">
                <table id="datatable" class="table table-striped">
                    <thead>
                        <tr>
                            <th>Fecha de préstamo</th>
                            <th>Fecha de devolución</th>
                            <th>Libro</th>
                            <th>Usuario</th>
                            <th>Bibliotecólogo</th>
                            <th>Renovar</th>
                            <th>Registrar devolución</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% loans.forEach(loan => { %>
                        <tr>
                            <td><%= loan.loanDate %></td>
                            <td><%= loan.returnDate %></td>
                            <td><%= loan.book.title %></td>
                            <td><%= loan.user.fullname %></td>
                            <td><%= loan.librarian.fullname %></td>
                            <td><button class="btn btn-outline-warning"><i class="bi bi-arrow-clockwise"></i></button></td>
                            <td><button class="btn btn-outline-success"><i class="bi bi-download"></i></button></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </main>
    <script src="/scripts/datatable.js" defer></script>
</body>
</html>