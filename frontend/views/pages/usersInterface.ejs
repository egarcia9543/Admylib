<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('../partials/adminHead') %>
    <%- include ('../partials/adminDatatable') %>
</head>

<body>
    <header>
        <%- include ('../partials/adminNavbar') %>
    </header>
    <main>
        <div class="card mb-4">
            <div class="card-body d-flex justify-content-end">
                <a class="btn btn-outline-dark" href="registroproductos">Registrar usuario <i
                        class="bi bi-person-add"></i></a>
            </div>
        </div>
        <div class="container">
            <div class="table-responsive">
                <table id="datatable" class="table table-striped">
                    <thead>
                        <tr>
                            <th>Nombre completo</th>
                            <th>Documento</th>
                            <th>Correo electrónico</th>
                            <th>Teléfono</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(user => { %>
                        <tr>
                            <td><%= user.fullname %></td>
                            <td><%= user.document %></td>
                            <td><%= user.email %></td>
                            <td><%= user.phone %></td>
                            <td>
                                <button class="btn btn-outline-warning"><i class="bi bi-pencil-square"></i></button>
                                <button class="btn btn-outline-danger" onclick="deleteRecord(`deleteuser/<%= user._id %>`)"><i class="bi bi-trash"></i></button>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </main>
    <script src="/scripts/datatable.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/scripts/deleteRecord.js"></script>
</body>
</html>